@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="login-page-bg d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="login-card text-center p-5 shadow-lg">
        <div class="mb-4">
            <i class="bi bi-door-open text-warning" style="font-size: 3rem;"></i>
        </div>
        
        <header>
            <h1 class="text-white fw-bold mb-3">@ViewData["Title"]</h1>
            @{
                if (User.Identity?.IsAuthenticated ?? false)
                {
                    <p class="text-secondary mb-4">Are you sure you want to leave the Feast?</p>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-warning btn-lg fw-bold w-100 shadow">
                            LOGOUT NOW
                        </button>
                    </form>
                    <div class="mt-3">
                        <a href="/" class="text-secondary text-decoration-none small">Wait, take me back!</a>
                    </div>
                }
                else
                {
                    <p class="text-light">You have successfully logged out.</p>
                    <hr class="border-secondary" />
                    <p class="text-secondary small">Hungry again?</p>
                    <a asp-page="./Login" class="btn btn-outline-warning fw-bold">Login Again</a>
                }
            }
        </header>
    </div>
</div>