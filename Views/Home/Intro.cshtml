@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to Pizzeria</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color:#0c0c0c;
            color: white;
            font-family: 'Playfair Display', serif; /* Classy serif font */
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        .top-right-nav {
            position: absolute;
            top: 20px;
            right: 30px;
            text-align: right;
        }

        .nav-btn {
            border: 1px solid #ffc107;
            color: #ffc107;
            padding: 8px 25px;
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            margin-left: 10px;
        }

        .nav-btn:hover {
            background-color: #ffc107;
            color: black;
        }

        .continue-link {
            display: block;
            margin-top: 15px;
            color: #888;
            text-decoration: none;
            font-size: 0.85rem;
            transition: color 0.3s;
        }

        .continue-link:hover {
            color: white;
        }

        .main-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            text-align: center;
        }

        .pizza-logo {
            font-size: 5rem;
            color: #ffc107;
            margin-bottom: -10px;
        }

        .brand-name {
            font-size: 6rem;
            font-style: italic;
            font-weight: 700;
            letter-spacing: -2px;
            background: linear-gradient(to bottom, #fff, #ffc107);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .tagline {
            color: #555;
            letter-spacing: 8px;
            text-transform: uppercase;
            font-size: 0.8rem;
            margin-top: 10px;
        }
        /* Three dots button */
.menu-toggle {
    position: absolute;
    top: 25px;
    left: 25px;
    font-size: 1.5rem;
    color: white;
    cursor: pointer;
    z-index: 1001;
}

/* Side Menu */
.side-menu {
    position: fixed;
    top: 0;
    left: -280px;
    width: 280px;
    height: 100%;
    background: white;
    color: black;
    padding: 20px;
    transition: left 0.3s ease;
    z-index: 1002;
}

.side-menu a {
    display: block;
    padding: 12px 0;
    color: black;
    text-decoration: none;
    font-weight: 500;
    border-bottom: 1px solid #eee;
}

.side-menu a:hover {
    color: #c00;
}

/* Menu header */
.menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: bold;
    margin-bottom: 20px;
}

/* Overlay */
.overlay {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5);
    opacity: 0;
    visibility: hidden;
    transition: 0.3s;
    z-index: 1000;
}

/* Active States */
.side-menu.active {
    left: 0;
}

.overlay.active {
    opacity: 1;
    visibility: visible;
}

    </style>
</head>
<script>
    function toggleMenu() {
        document.getElementById("sideMenu").classList.toggle("active");
        document.getElementById("overlay").classList.toggle("active");
    }
</script>

<body>

    <!-- Three Dots Button -->
<div class="menu-toggle" onclick="toggleMenu()">
    <i class="bi bi-three-dots-vertical"></i>
</div>

<!-- Side Menu -->
<div id="sideMenu" class="side-menu">
    <div class="menu-header">
        <span>Pizzeria </span>
        <i class="bi bi-x-lg" onclick="toggleMenu()"></i>
    </div> 

    <a asp-controller="Home" asp-action="StoreLocator">Store Locator</a>
<a asp-controller="Frontend" asp-action="TrackOrder">Track Order</a>
<a asp-controller="Home" asp-action="Index">Explore Menu</a>
<a asp-controller="Home" asp-action="AboutUs">About Us</a>
<a asp-controller="Home" asp-action="Privacy">Privacy</a>
<a asp-controller="Home" asp-action="ContactUs" style="color:red;">Contact Us</a>
</div>

<!-- Overlay -->
<div id="overlay" class="overlay" onclick="toggleMenu()"></div>
<script>
    document.querySelectorAll(".side-menu a").forEach(link => {
        link.addEventListener("click", () => {
            toggleMenu();
        });
    });
</script>

    <div class="top-right-nav">
        <a asp-controller="Account" asp-action="Login" class="nav-btn">Login</a>
        <a asp-controller="Account" asp-action="Register" class="nav-btn">Register</a>
        <a asp-controller="Home" asp-action="Index" class="continue-link">Continue without login <i class="bi bi-arrow-right"></i></a>
    </div>

    <div class="main-content">
        <div class="pizza-logo">
            <i class="bi bi-pie-chart-fill"></i>  
        </div>
        <h1 class="brand-name">pizzeria</h1>
        <div class="tagline"><b>Authentic & Classic</b></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.min.js"></script>
</body>
</html>

