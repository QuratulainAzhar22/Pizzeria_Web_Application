@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "My Order History";
}

<div class="container py-5">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-clock-history text-warning me-3" style="font-size: 2.5rem;"></i>
        <h2 class="text-white fw-bold mb-0">My Order History</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="card bg-dark text-center p-5 border-secondary">
            <h4 class="text-secondary">You haven't placed any orders yet!</h4>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-warning fw-bold px-4 rounded-pill">ORDER NOW</a>
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-lg rounded-3">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead class="bg-black text-secondary">
                    <tr>
                        <th class="ps-4">Order ID</th>
                        <th>Date & Time</th>
                        <th>Total Bill</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-warning">#@order.OrderId</td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy - hh:mm tt")</td>
                            <td class="fw-bold">$@order.TotalAmount</td>
                            <td>
                                @if (order.Status == "Pending")
                                {
                                    <span class="badge rounded-pill bg-warning text-dark">
                                        <i class="bi bi-hourglass-split me-1"></i> Pending
                                    </span>
                                }
                                else if (order.Status == "Out for Delivery")
                                {
                                    <span class="badge rounded-pill bg-info text-dark">
                                        <i class="bi bi-bicycle me-1"></i> On the Way
                                    </span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-success">
                                        <i class="bi bi-check-lg me-1"></i> Delivered
                                    </span>
                                }
                            </td>
                           <td class="text-center">
                               <form asp-action="Reorder" method="post">
                                    <input type="hidden" name="orderId" value="@order.OrderId" />
                                        <button type="submit" class="btn btn-warning">
                                            Reorder
                                        </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #1a1a1a !important;
        transition: 0.3s;
    }
    .table thead th {
        border-bottom: 2px solid #333;
        padding: 15px;
    }
    .table tbody td {
        padding: 15px;
        border-bottom: 1px solid #222;
    }
</style>