@model FastFood.Models.Product

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 bg-dark p-5 rounded shadow-lg text-white">
            <h2 class="text-warning mb-4">Edit Product</h2>
            <form asp-action="AddProduct" method="post">
                <div class="mb-3">
                    <label class="form-label">Product ID</label>
                    <input asp-for="Id" class="form-control bg-secondary text-white border-0" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Product Name</label>
                    <input asp-for="Name" class="form-control bg-secondary text-white border-0" required>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Price</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control bg-secondary text-white border-0" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Category</label>
                        <select asp-for="Category" class="form-select bg-secondary text-white border-0">
                            <option value="Pizza">Pizza</option>
                            <option value="Burger">Burger</option>
                            <option value="Drink">Drink</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control bg-secondary text-white border-0" placeholder="https://...">
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control bg-secondary text-white border-0" rows="3"></textarea>
                </div>
                 <a asp-action="ManageMenu" class="btn btn-outline-light">Submit</a>
            </form>
        </div>
    </div>
</div>