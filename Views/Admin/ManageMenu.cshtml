@model IEnumerable<FastFood.Models.Product>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-warning fw-bold">Menu Management</h2>
        <a asp-action="AddProduct" class="btn btn-warning fw-bold">+ ADD NEW Deal</a>
        <a asp-action="OrderStatistics" class="btn btn-warning fw-bold">Order Statistic</a>
        <a asp-action="AddProduct" class="btn btn-warning fw-bold">+ ADD NEW PIZZA</a>
    </div>

    <table class="table table-dark table-hover border-secondary">
        <thead>
            <tr class="text-warning">
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" width="50" class="rounded"></td>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>Rs.@item.Price</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this item?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>