<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pizzeria</title>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        </ul>
    <partial name="_LoginPartial" />
    </div>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <style>
        :root {
            --primary: #ff6b00;
            --secondary: #ffc107;
            --dark: #212529;
            --light: #f8f9fa;
        }
        body { background-color: #0c0c0c; color: white; } /* Dark theme forced */
        .section-title { position: relative; margin-bottom: 2rem; font-weight: 700; color: white; }
        .section-title:after {
            content: ''; position: absolute; bottom: -10px; left: 0;
            width: 60px; height: 3px; background-color: var(--primary);
        }
        .product-card { transition: transform 0.3s; border: none; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .product-card:hover { transform: translateY(-5px); }
    </style>
</head>
<body>

    @RenderBody()
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>